%div.row
  %h1
    = @book.title
%div.row
  %img{alt: @book.title, src: @book.image_url}
%div.row
  %h2
    登録している人
  %ul.list-group
    - @users.each do |user|
      %li.list-group-item
        %span
          %img{alt: user.name, src: user.icon_url, class: "img-circle", width: 50}
        %span
          = user.name
        %span
          - if user.user_books.find_by(book_id: @book.id).have?
            貸し出し可能
          - else
            貸し出し不可
