%div.container
  %div.row
    %h1
      = @book.title
    %div
      %img{alt: @book.title, src: @book.image_url}
  = form_for @review, url: book_reviews_path do |f|
    %div.form-group
      = f.label :title
      = f.text_field :title, class: "form-control"
    %div.form-group
      = f.label :description
      = f.text_area :description, class: "form-control", rows: 10
    %div.form-group
      = f.submit "送信", class: "btn btn-primary"
